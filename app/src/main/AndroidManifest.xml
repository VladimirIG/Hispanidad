<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.example.global">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.GameOver"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activities.Resultado"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activities.SeleccionPais"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".Controller.GameManager"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activities.ComoJugar"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activities.SeleccionPj"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".Activities.About"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>