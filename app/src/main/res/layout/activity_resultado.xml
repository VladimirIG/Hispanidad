<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondoResultado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Resultado"
    android:padding="10dp"
    >

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#CCFFFFFF"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/txt_Cabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="40dp"
            android:textAlignment="center"
            android:fontFamily="@font/aldrich"

            />

        <TextView
            android:id="@+id/txt_Cuerpo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text=""
            android:textSize="20dp"
            android:textAlignment="inherit"
            android:textStyle="italic"
            android:fontFamily="@font/aldrich"

            />
        <TextView
            android:id="@+id/txt_Pie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="20dp"
            android:fontFamily="@font/aldrich"

            android:gravity="end" />
        <TextView
            android:id="@+id/txt_CabeceraContador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/Titulo"
            android:textSize="25dp"
            android:fontFamily="@font/aldrich"

            android:textAlignment="center" />
        <TextView
            android:id="@+id/txt_HispanidadResultante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="20dp"
            android:fontFamily="@font/aldrich"
            android:textAlignment="center"/>


    </LinearLayout>

</LinearLayout>